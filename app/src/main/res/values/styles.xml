<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="AppTextViewBold">
        <item name="android:gravity">center</item>
        <item name="android:lineSpacingExtra">@dimen/_8sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTextViewNormal">
        <item name="android:gravity">center</item>
        <item name="android:lineSpacingExtra">@dimen/_8sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>
        <style name="AppTextInputLayout">
            <item name="android:layout_width">match_parent</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:background">@color/white</item>

        </style>
        <style name="AppTextInputEditTextNoDrawable">
            <item name="android:layout_width">match_parent</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:imeOptions">actionNext</item>
            <item name="android:background">@android:color/transparent</item>
            <item name="android:textColor">@color/black</item>

        </style>

    <style name="RoundedButtonBlue">
        <item name="android:gravity">center</item>
        <item name="android:lineSpacingExtra">@dimen/_8sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/rounded_btn_blue</item>
    </style>
    <style name="RoundedButtonStrokeBlue">
        <item name="android:gravity">center</item>
        <item name="android:lineSpacingExtra">@dimen/_8sdp</item>
        <item name="android:textColor">@color/app_color_blue</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/rounded_button_white_stroke</item>
    </style>
    <style name="RoundedButtonStrokeBlack">
        <item name="android:gravity">center</item>
        <item name="android:lineSpacingExtra">@dimen/_8sdp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/rounded_btn_black_stroke</item>
    </style>


</resources>