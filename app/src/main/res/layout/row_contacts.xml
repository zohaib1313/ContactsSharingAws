<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_marginBottom="@dimen/_10sdp"
    android:orientation="horizontal">

    <ImageView

        android:id="@+id/radioBtnSelect"
        android:layout_width="@dimen/_14sdp"
        android:layout_height="@dimen/_14sdp"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/ic_check_icon" />

    <RelativeLayout
        android:id="@+id/rlContact"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/_8sdp"
        android:layout_toEndOf="@+id/radioBtnSelect">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivContact"
            android:layout_width="@dimen/_50sdp"

            android:layout_height="@dimen/_50sdp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/eclipse"
          />

        <TextView
            android:visibility="gone"
            android:id="@+id/tvContact"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="ZA"
            android:textColor="@color/white" />


    </RelativeLayout>


    <TextView
        android:id="@+id/displayName"
        style="@style/AppTextViewBold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/rlContact"
        android:layout_toRightOf="@+id/rlContact"
        android:gravity="start"
        android:maxLines="1"
        android:paddingStart="@dimen/_8sdp"
        android:paddingLeft="@dimen/_8sdp"
        android:text="Bella Ciana"
        android:textColor="@color/black"
        android:textSize="@dimen/_10sdp"
        tools:ignore="RtlSymmetry" />
</RelativeLayout>